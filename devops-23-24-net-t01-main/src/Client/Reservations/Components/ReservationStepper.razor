@using MudBlazor

<MudContainer>
    <MudTimeline TimelineOrientation="TimelineOrientation.Horizontal" TimelinePosition="TimelinePosition.Top">
        <MudTimelineItem Color="Color.Tertiary">
            <MudText Align="Align.Center" Color="Color.Info" Typo="Typo.h6">Maak je keuze</MudText>
        </MudTimelineItem>
        @if (Success && Final == false)
        {
            <MudTimelineItem Color="Color.Tertiary">
                <MudText Align="Align.Center" Color="Color.Info" Typo="Typo.h6">Overzicht</MudText>
            </MudTimelineItem>
        }
        else if (Final)
        {
            <MudTimelineItem Color="Color.Tertiary">
                <MudText Align="Align.Center" Color="Color.Info" Typo="Typo.h6">Overzicht</MudText>
            </MudTimelineItem>
        }
        else
        {
            <MudTimelineItem>
                <MudText Align="Align.Center" Color="Color.Info" Typo="Typo.h6">Overzicht</MudText>
            </MudTimelineItem>
        }
        @if (Final)
        {
            <MudTimelineItem Color="Color.Tertiary">
                <MudText Align="Align.Center" Color="Color.Info" Typo="Typo.h6">Verzend aanvraag</MudText>
            </MudTimelineItem>
        }
        else
        {
            <MudTimelineItem>
                <MudText Align="Align.Center" Color="Color.Info" Typo="Typo.h6">Aanvraag verzenden</MudText>
            </MudTimelineItem>
        }
    </MudTimeline>
</MudContainer>
