@using MudBlazor

<EditForm Model="@customerDetailsForm" OnValidSubmit="OnValidSubmit">
    <MudContainer Class="mt-5 d-flex justify-center">
        <MudItem xs="12" MaxWidth="MaxWidth.Medium">

            <MudText Typo="Typo.h5" GutterBottom="true">Gegevens klant</MudText>
            <MudGrid>
                <ObjectGraphDataAnnotationsValidator />
                <MudItem xs="12">
                    <MudTextField @bind-Value="customerDetailsForm.FirstName" Label="Voornaam" />
                    <ValidationMessage For="@(() => customerDetailsForm.FirstName)" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="customerDetailsForm.LastName" Label="Naam" />
                    <ValidationMessage For="@(() => customerDetailsForm.LastName)" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="customerDetailsForm.PhoneNumber" Label="Mobile Nummer" />
                    <ValidationMessage For="@(() => customerDetailsForm.PhoneNumber)" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="customerDetailsForm.Email.Value" Label="Email" />
                    <ValidationMessage For="@(() => customerDetailsForm.Email.Value)" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="customerDetailsForm.VAT" Label="BTW nr" />
                    <ValidationMessage For="@(() => customerDetailsForm.VAT)" />
                </MudItem>
                <MudItem xs="10">
                    <MudTextField @bind-Value="customerDetailsForm.CustomerAddress.Street" Label="Straat" />
                    <ValidationMessage For="@(() => customerDetailsForm.CustomerAddress.Street)" />
                </MudItem>
                <MudItem xs="2">
                    <MudTextField @bind-Value="customerDetailsForm.CustomerAddress.Number" Label="Nr" />
                    <ValidationMessage For="@(() => customerDetailsForm.CustomerAddress.Number)" />
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="customerDetailsForm.CustomerAddress.PostalCode" Label="Post Code" />
                    <ValidationMessage For="@(() => customerDetailsForm.CustomerAddress.PostalCode)" />
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="customerDetailsForm.CustomerAddress.City" Label="Stad" />
                    <ValidationMessage For="@(() => customerDetailsForm.CustomerAddress.City)" />
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="customerDetailsForm.CustomerAddress.Country" Label="Land" />
                    <ValidationMessage For="@(() => customerDetailsForm.CustomerAddress.Country)" />
                </MudItem>
            </MudGrid>
            <MudCardActions>

                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary"
                           Class="mx-auto ml-4 mt-10" Style="width: 180px;">Verzend aanvraag</MudButton>
            </MudCardActions>
        </MudItem>
       
    </MudContainer>
</EditForm> 
